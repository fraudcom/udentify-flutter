<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cameraContainerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

    <com.otaliastudios.cameraview.CameraView
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:backgroundTintMode="src_over"
        android:keepScreenOn="true"
        app:cameraAudio="off"
        app:cameraAutoFocusResetDelay="0"
        app:cameraFacing="back"
        app:cameraFlash="off"
        app:cameraGestureScrollHorizontal="exposureCorrection"
        app:cameraPictureSizeBiggest="true"
        app:cameraUseDeviceOrientation="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <io.udentify.android.ocr.activities.MaskView
        android:id="@+id/mask_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/title_and_instruction_labels_layout"
        style="@style/TitleAndInstructionLabelsLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_label"
            style="@style/TitleLabelStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/udentify_ocr_status_view_title_front_side" />

        <TextView
            android:id="@+id/instruction_label"
            style="@style/InstructionLabelStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/udentify_ocr_instruction_text_front_side" />

    </LinearLayout>

    <io.udentify.android.ocr.activities.CardMaskView
        android:id="@+id/card_mask_view"
        style="@style/UdentifyCardMaskView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_scan_id_card"
        style="@style/UdentifyFooterButtonStyle"
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:backgroundTintMode="src_over"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/udentify_ocr_status_view_title_front_side"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_scan_manual"
        style="@style/UdentifyFooterButtonStyle"
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:backgroundTintMode="src_over"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:stateListAnimator="@null"
        android:text="@string/udentify_ocr_button_capture_title"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/progress_bar_layout"
        style="@style/UdentifyFooterButtonStyle"
        android:layout_width="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:visibility="invisible"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:indicatorColor="@color/udentify_ocr_footer_btn_color_success"
            app:trackColor="@color/udentify_ocr_footer_btn_background_color"
            app:trackCornerRadius="@dimen/udentify_ocr_footer_btn_border_corner_radius"
            app:trackThickness="@dimen/udentify_ocr_footer_btn_height" />

        <TextView
            android:id="@+id/progress_bar_text"
            style="@style/UdentifyFooterButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:text="@string/udentifyocr_footer_button_text_scanning"/>

    </RelativeLayout>

